if theme.footer
  - const footer = theme.footer || {}
  - const footerIcons = footer.footer_icons || {}
  - const footerLeft = footerIcons.left || []
  - const footerRight = footerIcons.right || []
  #footer_deal
    if footerIcons.enable
        each i in footerLeft
          if i.class == "in"
            a.deal_link(href=`${i.link}`, title=`${i.desrc}`)
              i(class=`${i.icon}`)
          else if i.class == "out"
            a.deal_link(target='_blank', rel='noopener external nofollow', href=`${i.link}`, title=`${i.desrc}`)
              i(class=`${i.icon}`)
          else 
            a.deal_link(href=`${i.link}`, title=`${i.desrc}`)
              i(class=`${i.icon}`)
    if footer.avatar
      img.footer_mini_logo.entered.loading(style="border-radius:50%" src=url_for(footer.avatar) onclick="btf.scrollToDest(0,500)" title="返回顶部")
    if footerIcons.enable
